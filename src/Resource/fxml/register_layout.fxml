<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="315.0" minWidth="350.0" prefHeight="314.0"
          prefWidth="354.0" stylesheets="@/Resource/css/theme.css" xmlns="http://javafx.com/javafx/9.0.4"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="Login.Register">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="20.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="63.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="123.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="152.0" minWidth="10.0" prefWidth="22.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="20.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="78.0" minHeight="10.0" prefHeight="54.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="146.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="146.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="146.0" minHeight="50.0" prefHeight="46.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="86.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="66.0" minHeight="10.0" prefHeight="26.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="66.0" minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <children>
        <JFXButton fx:id="btnSignUp" buttonType="RAISED" mnemonicParsing="false" onAction="#signUp" prefHeight="40.0"
                   prefWidth="80.0" style="-fx-text-fill:WHITE;-fx-background-color:#5264AE;-fx-font-size:14px;"
                   styleClass="about-button" text="完成注册" textAlignment="CENTER" GridPane.columnIndex="2"
                   GridPane.rowIndex="4">
        </JFXButton>

        <JFXButton fx:id="btnBack" buttonType="RAISED" mnemonicParsing="false" onAction="#back" prefHeight="20.0"
                   prefWidth="60.0" style="-fx-text-fill:WHITE;-fx-background-color:#5264AE;-fx-font-size:14px;"
                   styleClass="about-button" text="返回" textAlignment="CENTER" GridPane.columnIndex="1"
                   GridPane.rowIndex="5">
        </JFXButton>


        <Text fill="#5264AE" strokeType="OUTSIDE" strokeWidth="0.0" text="用户注册" textAlignment="CENTER"
              wrappingWidth="139.0" GridPane.columnIndex="1">
            <font>
                <Font name="Xingkai SC Bold" size="25.0"/>
            </font>
            <GridPane.margin>
                <Insets left="20.0" top="5.0"/>
            </GridPane.margin>
        </Text>

        <JFXTextField fx:id="tfAccount" labelFloat="true" promptText="Account" GridPane.columnIndex="1"
                      GridPane.columnSpan="3" GridPane.rowIndex="1">
        </JFXTextField>

        <JFXPasswordField fx:id="pfPassword" labelFloat="true" promptText="Password" GridPane.columnIndex="1"
                          GridPane.columnSpan="3" GridPane.rowIndex="2">
        </JFXPasswordField>
        <JFXPasswordField fx:id="pfRePassword" labelFloat="true" promptText="RePassword" GridPane.columnIndex="1"
                          GridPane.columnSpan="3" GridPane.rowIndex="3">
        </JFXPasswordField>
    </children>
</GridPane>
